##My Code Here##
def analyze_motion():
    try: 
      initial_velocity = float(input("Enter the initial velocity (m/s): "))
      acceleration = float(input("Enter the acceleration (m/sÂ²): "))
      time = float(input("Enter the time (s): "))
      final_velocity = initial_velocity + (acceleration * time)
      displacement = (initial_velocity * time) + (0.5 * acceleration * time**2)
      average_velocity = displacement / time
      results = {  
            'Final Velocity (m/s)': final_velocity,
            'Displacement (m)': displacement,
            'Average Velocity (m/s)': average_velocity,
            }
      return results
    except ValueError:
        print("Please enter valid numbers")
        return None
analyze_motion()
